<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dip"
    android:weightSum="1"
    app:layout_collapseParallaxMultiplier="0.0"
    android:layout_height="100dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:weightSum="1"
        android:layout_weight="0.3">

        <TextView
            android:id="@+id/lecture_list_item_topic"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:layout_weight="0.4"
            android:layout_marginLeft="10dp"
            android:text="一元函数微积分（信）"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="0.4">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:paddingStart="15dp"
                app:srcCompat="@drawable/ic_alarm_black_48dp" />

            <TextView
                android:id="@+id/lecture_list_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_weight="1"
                android:text="A类课，3学分"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_weight="0.4">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_account_balance_black"
                android:paddingStart="15dp" />
            <TextView
                android:id="@+id/lecture_list_item_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:textSize="12sp"
                android:layout_weight="0.6"
                android:text="A类课，3学分"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_weight="0.4">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_account_circle_black_48dp"
                android:paddingStart="15dp" />

            <TextView
                android:id="@+id/lecture_list_item_lecturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:textSize="12sp"
                android:layout_weight="0.6"
                android:text="A类课，3学分"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>